{
  "name": "design-principle",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "validate:tokens": "npm --prefix packages/tokens run validate",
    "build:tokens": "npm --prefix packages/tokens run build",
    "lint": "npm run lint:asset && eslint . --ext .ts,.tsx,.js,.jsx,.cjs,.mjs",
    "lint:asset": "node scripts/asset-lint.js",
    "lint:color": "stylelint \"**/*.{css,scss}\" --config packages/config/stylelint.config.js --custom-syntax postcss-scss",
    "typecheck": "tsc -b --noEmit",
    "test": "npm --workspace packages/ui run visual:test",
    "ci": "npm run validate:tokens && npm run build:tokens && npm run lint && npm run stylelint && npm run typecheck && npm run test",
    "format": "prettier --write .",
    "storybook": "npm --workspace packages/ui run storybook",
    "sb:build": "npm --workspace packages/ui run build-storybook",
    "tokens": "node packages/tokens/build.js",
    "web:dev": "npm --workspace apps/web run dev",
    "web:build": "npm --workspace apps/web run build",
    "validate:assets": "npx tsx scripts/asset-manifest-validate.ts",
    "generate:assets": "npx tsx scripts/asset-manifest-generate.ts",
    "build:assets": "npx tsx scripts/asset-manifest-build.ts",
    "sync:supabase-assets": "npx tsx scripts/sync-supabase-assets.ts"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^8.1.0",
    "@storybook/addon-essentials": "^8.1.0",
    "@storybook/addon-interactions": "^8.1.0",
    "@storybook/react-vite": "^8.1.0",
    "@storybook/test-runner": "^0.18.0",
    "@tanstack/react-query": "^5.20.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^20.11.17",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vanilla-extract/css": "^1.14.0",
    "@vanilla-extract/vite-plugin": "^4.0.4",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "framer-motion": "^11.0.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.4.5",
    "vite": "^5.2.0",
    "vitest": "^1.4.0",
    "zustand": "^4.5.0"
  }
}
