{
  "name": "recoverlution-design-bedrock",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "token-lint": "node scripts/token-lint.js",
    "build-tokens": "node scripts/build-tokens.js",
    "storybook": "storybook dev -p 6006",
    "prestorybook": "npm run build-tokens",
    "build-storybook": "storybook build",
    "prebuild-storybook": "npm run build-tokens",
    "a11y": "npx pa11y-ci --config .pa11yci",
    "chromatic": "npx chromatic --project-token $CHROMATIC_PROJECT_TOKEN",
    "lint:infinitek": "./scripts/infinitek-check.sh ./src",
    "lint:js": "eslint \"**/*.{js,ts,tsx}\" --max-warnings=0 || true",
    "lint:css": "stylelint \"**/*.{css,scss}\" --allow-empty-input || true",
    "check:all": "npm run lint:infinitek && npm run token-lint && node scripts/validate-modules.js"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.0.0",
    "@storybook/react": "^7.0.0",
    "@storybook/react-webpack5": "^7.6.21",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "ajv": "^8.12.0",
    "eslint": "^8.0.0",
    "storybook": "^7.6.21",
    "style-dictionary": "^3.8.0",
    "stylelint": "^15.0.0",
    "stylelint-config-standard": "^30.0.0"
  },
  "dependencies": {
    "lucide-react": "^0.562.0"
  }
}
